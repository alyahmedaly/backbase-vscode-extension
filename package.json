{
	"name": "backbase-vscode-extension",
	"displayName": "Backbase extension",
	"publisher": "AlyAhmedAly",
	"description": "",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.42.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/alyahmedaly/backbase-vscode-extension"
	},
	"license": "Apache-2.0",
	"categories": [
		"Other",
		"Programming Languages",
		"Linters"
	],
	"activationEvents": [
		"onLanguage:typescript"
	],
	"main": "./dist/extension",
	"contributes": {
		"typescriptServerPlugins": [
			{
				"name": "backbase-typescript-plugin",
				"enableForWorkspaceTypeScriptVersions": true
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack --mode production",
		"test-compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0",
		"ts-loader": "^6.2.1",
		"webpack": "^4.41.6",
		"webpack-cli": "^3.3.11",
		"zone.js": "~0.10.2"
	},
	"dependencies": {
		"backbase-typescript-plugin": "~0.0.1-beta.2"
	},
	"peerDependencies": {
		"@angular/core": "^9.0.2"
	},
	"configuration": {
		"type": "object",
		"title": "backbase",
		"properties": {
			"bb.parseNodeModules": {
				"type": "boolean",
				"description": "Should we collect info form node_modules!.",
				"default": true
			}
		}
	}
}
